<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietSentry.DatabaseStatusPage">

    <VerticalStackLayout
        Padding="20"
        Spacing="16">
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
            <Label
                Text="Database Status"
                FontAttributes="Bold"
                FontSize="24" />
            <Button
                Grid.Column="1"
                Text="Back to Utilities"
                Clicked="OnBackClicked" />
        </Grid>

        <Label
            x:Name="DbPathLabel"
            Text="Path:"
            LineBreakMode="CharacterWrap" />

        <Label
            x:Name="FoodCountLabel"
            Text="Foods:"
            FontAttributes="Bold" />

        <Label
            x:Name="ErrorLabel"
            TextColor="Red"
            IsVisible="False" />

        <Button
            Text="Refresh"
            Clicked="OnRefreshClicked" />

    </VerticalStackLayout>

</ContentPage>
