<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietSentry.UtilitiesPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="16">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label
                    Text="Utilities"
                    FontAttributes="Bold"
                    FontSize="24" />
                <Button
                    Grid.Column="1"
                    Text="Back to Foods Table"
                    Clicked="OnBackClicked" />
            </Grid>

            <Button
                Text="Export"
                Clicked="OnUtilityClicked" />

            <Button
                Text="Import"
                Clicked="OnUtilityClicked" />

            <Button
                Text="Backup"
                Clicked="OnUtilityClicked" />

            <Button
                Text="Database Status"
                Clicked="OnDatabaseStatusClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
