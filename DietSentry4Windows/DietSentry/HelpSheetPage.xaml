<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DietSentry.HelpSheetPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Transparent"
    Shell.NavBarIsVisible="False">

    <Grid
        BackgroundColor="#80000000"
        RowDefinitions="*,Auto">
        <BoxView
            Grid.Row="0"
            BackgroundColor="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnDismissTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
        <Border
            x:Name="SheetContainer"
            Grid.Row="1"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
            Padding="20,16"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16,16,0,0" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="12">
                <Grid ColumnDefinitions="*,Auto">
                    <Label
                        x:Name="TitleLabel"
                        FontAttributes="Bold"
                        FontSize="18"
                        VerticalOptions="Center" />
                    <Button
                        Grid.Column="1"
                        Text="Close"
                        Clicked="OnCloseClicked"
                        Padding="6,2"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />
                </Grid>
                <Label
                    x:Name="BodyLabel"
                    LineBreakMode="WordWrap" />
                <Button
                    Text="Open Full Help"
                    Clicked="OnOpenHelpClicked" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
