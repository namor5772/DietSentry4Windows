<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietSentry.EditFoodPage">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="20"
                Spacing="16">
                <Grid
                    RowDefinitions="{OnPlatform Android='Auto,Auto', Default='Auto'}"
                    ColumnDefinitions="Auto,*,Auto"
                    ColumnSpacing="12">
                    <Label
                        Grid.Column="1"
                        Text="Edit Food"
                        FontAttributes="Bold"
                        FontSize="24"
                        VerticalOptions="Center" />
                    <Button
                        Grid.Column="{OnPlatform Android=0, Default=2}"
                        Grid.ColumnSpan="{OnPlatform Android=3, Default=1}"
                        Grid.Row="{OnPlatform Android=1, Default=0}"
                        Text="Back to Foods Table"
                        BackgroundColor="{StaticResource PrimaryDark}"
                        TextColor="{StaticResource White}"
                        WidthRequest="{OnPlatform Android=89.6, Default=-1}"
                        Clicked="OnBackClicked" />
                </Grid>

                <Entry
                    Placeholder="Food description" />

                <Entry
                    Placeholder="Amount (g or mL)" />

                <Button
                    Text="Confirm"
                    Clicked="OnConfirmClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
